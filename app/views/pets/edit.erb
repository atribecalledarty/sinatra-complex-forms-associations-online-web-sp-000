<h1>Update Pet</h1>

<form method="POST" action="/pets">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name: </label>
  <br>
  <input type="text" name="pet_name">
  <br>
  <label>Choose existing owner:</label>
  <br>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="owner_id" value="<%= owner.id %>" <%= 'checked' if owner.pet == @pet %>id="<%= owner.id %>"><%= owner.name %> </input>
    
  <% end %>
  <br>
  <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br>
  <input type="submit" value="Create Pet">
  
  
  
</form>